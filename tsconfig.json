{
    "compilerOptions": {
        "target": "es2015",
        "module": "umd",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./tmp",
        "rootDir": ".",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "types": [
            "node",
            "hapi",
            "boom",
            "hoek",
            "joi",
            "websocket"
        ],
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "src/externals",
        "node_modules",
        "dist",
        "tmp"
    ]
}
